---
import siteConfig from '../../data/siteConfig.json';

const paleta = siteConfig.estilo.paleta;
const { nombre } = siteConfig.info_basica;

const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Nosotros', href: '/nosotros' },
  { name: 'Servicios', href: '/servicios' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contacto', href: '/contacto' }
];
---

<header class={`fixed top-0 w-full z-50 transition-all duration-300 ${
  paleta === 'oceano' ? 'bg-sky-50/80 backdrop-blur-md border-b-2 border-cyan-100' :
  paleta === 'sunset' ? 'bg-gradient-to-r from-orange-50/90 to-pink-50/90 backdrop-blur-md' :
  paleta === 'forest' ? 'bg-lime-50/90 border-b-4 border-green-800' :
  'bg-black text-white border-b-4 border-amber-400'
}`}>
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2">
      {paleta === 'oceano' && (
        <span class="text-2xl font-bold text-cyan-900 flex items-center gap-2">
          <span class="text-primary text-3xl">üåä</span> {nombre}
        </span>
      )}
      {paleta === 'sunset' && (
        <span class="text-2xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-pink-600">
          ‚òÄÔ∏è {nombre}
        </span>
      )}
      {paleta === 'forest' && (
        <span class="text-2xl font-serif text-green-950 flex items-center gap-2">
          <span class="text-primary text-3xl">üåø</span> {nombre}
        </span>
      )}
      {paleta === 'urban' && (
        <span class="text-3xl font-bebas tracking-tighter text-white hover:text-amber-400 transition-colors">
          {nombre} // VET
        </span>
      )}
    </a>

    <nav class="hidden md:flex items-center gap-8">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class={`font-bold transition-all ${
            paleta === 'oceano' ? 'text-cyan-900 hover:text-primary' :
            paleta === 'sunset' ? 'text-orange-950 hover:text-pink-600' :
            paleta === 'forest' ? 'text-green-900 hover:text-primary' :
            'text-zinc-400 hover:text-amber-400 uppercase font-oswald tracking-widest'
          }`}
        >
          {item.name}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-4">
      <button class={`hidden sm:block py-2 px-6 rounded-lg font-bold transition-all ${
        paleta === 'oceano' ? 'bg-primary text-white hover:scale-105' :
        paleta === 'sunset' ? 'bg-pink-500 text-white shadow-md hover:bg-pink-600' :
        paleta === 'forest' ? 'bg-primary text-white border-b-4 border-dark hover:translate-y-1 hover:border-b-2' :
        'bg-amber-400 text-black font-bebas tracking-widest px-8'
      }`}>
        RESERVAR
      </button>
      
      <button class="md:hidden text-current p-2">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<div class="h-20"></div> <!-- Spacer -->
