---
import siteConfig from '../../data/siteConfig.json';
import { MapPin, Phone, MessageCircle, Mail, Clock } from 'lucide-astro';

const paleta = siteConfig.estilo.paleta;
const { info_basica } = siteConfig;
---

<section class={`py-24 relative ${
  paleta === 'urban' ? 'bg-black text-white' : 'bg-white'
}`}>
  <div class="container mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-16">
      <div>
        <h2 class={`text-4xl md:text-6xl font-bold mb-8 ${
          paleta === 'oceano' ? 'text-cyan-900' :
          paleta === 'sunset' ? 'text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-pink-600' :
          paleta === 'forest' ? 'text-green-950 px-8 py-2 border-l-8 border-primary' :
          'text-white uppercase font-bebas tracking-widest'
        }`}>
          Encuéntranos
        </h2>

        <div class="space-y-8">
          <div class="flex gap-4">
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl shrink-0 ${
              paleta === 'urban' ? 'bg-white text-black' : 'bg-primary/10 text-primary'
            }`}>
              <MapPin />
            </div>
            <div>
              <h4 class="font-bold text-xl mb-1">Dirección</h4>
              <p class="opacity-80">{info_basica.direccion}, {info_basica.ciudad}</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl shrink-0 ${
              paleta === 'urban' ? 'bg-white text-black' : 'bg-primary/10 text-primary'
            }`}>
              <Phone />
            </div>
            <div>
              <h4 class="font-bold text-xl mb-1">Teléfono</h4>
              <p class="opacity-80">{info_basica.telefono}</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl shrink-0 ${
              paleta === 'urban' ? 'bg-white text-black' : 'bg-primary/10 text-primary'
            }`}>
              <Clock />
            </div>
            <div>
              <h4 class="font-bold text-xl mb-1">Horarios</h4>
              <p class="opacity-80">{info_basica.horarios}</p>
            </div>
          </div>
        </div>

        <div class={`mt-12 p-8 rounded-3xl ${
          paleta === 'oceano' ? 'bg-sky-50 border-2 border-cyan-100' :
          paleta === 'sunset' ? 'bg-orange-50 border-2 border-orange-100' :
          paleta === 'forest' ? 'bg-lime-50 rounded-br-[4rem]' :
          'bg-zinc-900 border border-zinc-800'
        }`}>
          <h3 class="text-2xl font-bold mb-6">Envíanos un mensaje</h3>
          <form class="space-y-4">
            <div class="grid md:grid-cols-2 gap-4">
              <input type="text" placeholder="Tu nombre" class={`w-full p-4 rounded-xl outline-none border-2 transition-all ${
                paleta === 'urban' ? 'bg-zinc-800 border-zinc-700 text-white focus:border-amber-400' : 'bg-white border-zinc-100 focus:border-primary'
              }`} />
              <input type="email" placeholder="Email" class={`w-full p-4 rounded-xl outline-none border-2 transition-all ${
                paleta === 'urban' ? 'bg-zinc-800 border-zinc-700 text-white focus:border-amber-400' : 'bg-white border-zinc-100 focus:border-primary'
              }`} />
            </div>
            <textarea placeholder="¿En qué podemos ayudarte?" rows="4" class={`w-full p-4 rounded-xl outline-none border-2 transition-all ${
              paleta === 'urban' ? 'bg-zinc-800 border-zinc-700 text-white focus:border-amber-400' : 'bg-white border-zinc-100 focus:border-primary'
            }`}></textarea>
            <button class={`w-full py-4 rounded-xl font-bold transition-all ${
              paleta === 'oceano' ? 'bg-primary text-white' :
              paleta === 'sunset' ? 'bg-orange-500 text-white' :
              paleta === 'forest' ? 'bg-primary text-white' :
              'bg-amber-400 text-white hover:bg-white hover:text-black uppercase font-bebas tracking-widest'
            }`}>
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>

      <div class={`min-h-[400px] rounded-3xl overflow-hidden grayscale contrast-125 opacity-80 ${
        paleta === 'urban' ? 'border-4 border-white translate-x-4 -translate-y-4 shadow-[16px_-16px_0_#FBBF24]' : 'shadow-xl'
      }`}>
        <iframe 
          src={`https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d13374.0!2d${info_basica.coordenadas.lng}!3d${info_basica.coordenadas.lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2scl!4v1700000000000!5m2!1ses-419!2scl`}
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
        ></iframe>
      </div>
    </div>
  </div>
</section>
